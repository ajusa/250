{% extends "views/index.nimja" %}
{% block content %}
{% if inProgress %}
  <p><a class="secondary" href="{{paths.game}}" role="button">Resume last game</a></p>
  <form hx-post="{{paths.game}}">
    {% importnimja "views/game_controller/_form.nimja" %}
    <button type="submit">Start game</button>
  </form>
{% endif %}
{% endblock %}